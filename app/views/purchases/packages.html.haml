.container
	#notice
		%h5= notice
	.page-header
		%h1.text-gold Packages
	.row.grid-view
		- @packages.each do |package|  
			.col-sm-6.col-md-4.col-lg-3
				.grid-box.package-listing 
					%dl.dl-horizontal
						%dt Package name :
						%dd= package.name
						%dt	Quantity :
						%dd= package.quantity
						%dt Price per unit :
						%dd=number_to_currency(package.price_per_unit, unit: '$')
						%dt Total :
						%dd
							%b.text-gold 
								=number_to_currency(package.total, unit: '$')
					= link_to "Buy", new_purchase_path(:package => {:id => package}),:class => "btn btn-gold btn-block btn-flat"