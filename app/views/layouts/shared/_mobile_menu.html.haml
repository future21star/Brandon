%aside
  .clearfix
    %h5.pull-left.m-t-5.m-b-3 Menu
    %span.pull-right.close-menu
      %i.fa.fa-times
  -if user_signed_in? 
    .user-name.clearfix
      =current_user.full_name
      %small.pull-right
        =link_to "Profile",edit_user_registration_path
    %ul.list-unstyled
      %li
        =link_to "Dashboard",dashboard_path
    %ul.list-unstyled
      %li
        =link_to "Purchasing",purchases_path

  %ul.list-unstyled
    -unless user_signed_in?
      %li
        =link_to "Register",new_user_registration_path
      %li
        =link_to "Business Sign Up",new_user_registration_path({business: true})
      %li
        =link_to "Log In",new_user_session_path
    %li
      =link_to "Projects",projects_path
    %li
      =link_to "Blog","http://blog.quotr.ca/",:target=>'_blank'
  -if @show_business_centre
    %h5 Business Centre
    %ul.list-unstyled
      %li
        =link_to "Account Search",account_search_path
      %li
        =link_to "Business Search",business_search_path
  %ul.list-unstyled
    %li
      =link_to "Contact Us",new_feedback_path
  -if user_signed_in?
    %ul.list-unstyled
      %li
        =link_to "Log Out",destroy_user_session_path,method: :delete
  / Social links
  %h5 Get Social
  %ul.social-links
    %li
      =link_to 'http://www.facebook.com/QuotrSupport',:target=>'_blank',:title => "Like us on Facebook" do
        %i.fa.fa-facebook
    %li
      =link_to 'http://www.instagram.com/QuotrSupport',:target=>'_blank',:title => "Follow us on Instagram" do
        %i.fa.fa-instagram
/ /Mobile Menu