<p id="notice"><%= notice %></p>

<h1>Business Search</h1>

<%= form_tag business_search_path, :method => 'get' do %>
    <%= label_tag :company_name, "Company name" %><%= text_field_tag :company_name, params[:company_name] %>
    <%= label_tag :phone_number, "Phone number" %><%= text_field_tag :phone_number, params[:phone_number] %>
    <%= label_tag :website, "Website" %><%= text_field_tag :website, params[:website] %>
    <%= submit_tag "Search" %>
    <%= link_to "Clear", business_search_path %>
<% end %>

<table>
  <thead>
  <tr>
    <th>Company name</th>
    <th>Phone number</th>
    <th>Website</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Address</th>
    <th>Last Login</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @businesses.each do |business| %>
      <tr>
        <td><%= business.company_name %></td>
        <td><%= business.phone_number %></td>
        <td><%= business.website %></td>
        <td><%= business.user.first_name %></td>
        <td><%= business.user.last_name %></td>
        <td><%= business.user.email %></td>
        <td><%= business.user.address.full_address %></td>
        <td><%= business.user.last_sign_in_at %></td>
        <td><%= link_to 'edit', edit_business_path(business.id) %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @businesses %>