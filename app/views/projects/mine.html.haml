.container
	#notice
		%h5= notice
	.page-header
		%h1.text-gold Projects
	.row.grid-view
		- @projects.each do |project|
			.col-sm-6.col-md-4.col-lg-3
				.grid-box
					%dl
						%dt Title
						%dd= project[:title]
						%dt State
						%dd= project[:state]
						%dt Published Date
						%dd= project[:published]
					= link_to('Show', project_path(project[:id]),:class => "btn btn-gold btn-block btn-flat")
	= will_paginate @projects